{% extends 'base.html.twig' %}

{% block body %}
    <section class="edit-user-form">
        <div class="title">
            <h1>Modifier mon compte</h1>
        </div>
        <div class="container-form">
            {{ form_start(form) }}
            <div>
                {{ form_row(form.firstName, {
                    'label_attr': {'class': 'flex-form'}
                }) }}
            </div>
            <div>
                {{ form_row(form.lastName, {
                    'label_attr': {'class': 'flex-form'}
                }) }}
            </div>
            <div>
                {{ form_row(form.pseudo, {
                    'label_attr': {'class': 'flex-form'}
                }) }}
            </div>
            <div>
                {{ form_row(form.email, {
                    'label_attr': {'class': 'flex-form'}
                }) }}
            </div>
            <div>
                {{ form_row(form.save) }}
            </div>
            {{ form_end(form) }}
        </div>
    </section>

{% endblock %}
{% extends 'base.html.twig' %}
{% block body %}
    <section class="carousel">
        <div id="slider">
            <figure>
                <img src="{{ asset('build/images/image1.jpg') }}" alt="">
                <img src="{{ asset('build/images/image2.jpg') }}" alt="">
                <img src="{{ asset('build/images/image3.jpg') }}" alt="">
                <img src="{{ asset('build/images/image5.jpg') }}" alt="">
                <img src="{{ asset('build/images/image1.jpg') }}" alt="">
            </figure>
        </div>
    </section>
    <section class="last-article">
        <h2>Derniers articles</h2>
        <div class="articles-container-listing">
            {% for article in articles | sort((a,b)=>b.createdAt > a.createdAt) | slice(0, 3) %}
                {% include 'article/_articles-card.html.twig' %}
            {% endfor %}
        </div>
    </section>
    <section class="world-map">
        <div class="world-container">
            <h2>Carte du Monde</h2>
            <a href="{{ path('destination') }}"><img src="{{ asset('build/images/World_map.svg.png') }}" alt="Carte du monde"></a>
        </div>
    </section>
{% endblock body %}
{% extends 'base.html.twig' %}

{% block body %}
<section class="article-details">
    <div class="articles-container-details">
        <h3>
            {{ article.title|raw }}
        </h3>
        {{ article.content|raw }}
    </div>
</section>
<section class="comment-article">
    {% if app.user %}
    <h3>Laisser un commentaire !</h3>
    <div class="container-comment-form">
        <div class="comment-form">
            {{ form_start(form) }}
            <div class="comment-content">
                {{ form_row(form.commentContent) }}
            </div>
            <div class="comment-sub">
                {{ form_row(form.envoyer) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    {% endif %}
    <div class="container-comment">
        <div class="comments">
            {% for comment in article.comments %}
                <div class="comment-date-pseudo">
                    <p>{{ comment.pseudo }} le {{ comment.createdAt|date("d/m/Y") }}</p>
                </div>
                <div class="comment-content-wright">
                    <p>{{ comment.commentContent }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endblock %}

